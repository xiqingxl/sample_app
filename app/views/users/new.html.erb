<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :"用户名" %>
      <%= f.text_field :name %>
      
      <%= f.label :"邮件地址" %>
      <%= f.text_field :email %>
      
      <%= f.label :"密码" %>
      <%= f.password_field :password %>
      
      <%= f.label :"确认" %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit "Creat my account", class: "btn btn-large btn-primary" %>
      
    <% end %>
  </div>
</div>
